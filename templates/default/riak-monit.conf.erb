check process riak-elang matching "*.<%= @process_matching %>"
  #group riak 
  start program = "<%= @start_program %>"
  if failed host <%= @http_host %> port <%= @http_port %> protocol http 
    and request "/"
    with timeout 2 seconds for 2 cycles
  then restart
  

check process riak-service
  with pidfile "/var/run/riak/riak.pid"
  start program = "/etc/init.d/riak start"
  stop program = "/etc/init.d/riak stop"